#include <stdio.h>
#include <string.h>

int main(){
    char item_name[20]="";
    float price=0.0f;
    int quantity=0;
    float total=0.0f;

    printf("Enter the item name: ");
    fgets(item_name,sizeof(item_name),stdin);
    item_name[strlen(item_name)-1]='\0';

    printf("Enter the price: $");
    scanf("%f",&price);

    printf("Enter the quantity: ");
    scanf("%d",&quantity);

    total=price*quantity;

    printf("\nThe total is: $%.2f.",total);
    printf("\nYou ordered %s.",item_name);

    return 0;
}
